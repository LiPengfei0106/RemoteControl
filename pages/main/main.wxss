.navbar {
  display: flex;
  position: fixed;
  z-index: 500;
  top: 0;
  left: 0px;
  right: 48px;
  height: 48px;
  background: #333;
}

.navbar__item {
  position: relative;
  display: block;
  flex: 1;
  /* padding: 10rpx 0; */
  text-align: center;
  height: 48px;
  line-height: 48px;
  color: rgb(80, 80, 80);
}

.navbar__item_on {
  color: rgb(18, 150, 219) !important;
}

.navbar__slider {
  position: absolute;
  display: block;
  content: " ";
  left: 0;
  bottom: 0;
  height: 2px;
  background-color: rgb(18, 150, 219) !important;
  transition: transform 0.3s;
}

.navbar__title {
  display: inline-block;
  font-size: 18px;
  /* font-size: 36rpx; */
  max-width: 8em;
  text-align: center;
}

