	color: rgb(175,175,175);
	line-height: 90rpx;
	text-align: center;
}









/* touch pad */
.touch-pad {
	position : absolute;
	top: 120rpx;
	width: 100vw;
	height: 100vw;
	/*background-color:rgb(34,34,34);*/
	
	display : flex;
	text-align: center;
}

