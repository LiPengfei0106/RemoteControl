.container{
	position: fixed;
	width: 100vw;
	height: 100vh;
	background-color:rgb(34,34,34);
	transition-duration: 1s;
}

.touch-pad-active{
	transition-duration: 0s;
	box-shadow: inset 0 0 75vw 10vw rgba(20,160,255,0.8);
	/*background-color: rgb(20,160,255);*/
	/*animation:popi 1s infinite;*/
}
.touch-pad-enter{
	transition-duration: 0s;
	/*box-shadow: inset 0 0 75vw 10vw rgba(60,255,190,1) !important;*/
	background-color: rgb(60,255,190);
	/*animation:popi 1s infinite;*/
}
.touch-back-active{
	transition-duration: 0s;
	box-shadow: inset 0 0 75vw 10vw rgba(266,160,25,0.8);
}






/*play-bar*/
.play-bar{
	position : absolute;
	width: 100vw;
	height: 120rpx;
	/*background-color:rgb(34,34,34);*/
	display:flex;
	justify-content:center;
	align-items: center;
}

.play-bar-button{
	border-radius:3vw;
	width: 82vw;
	height: 90rpx;
	background-color: rgba(255,255,255,.05);
	/*border: solid 3px rgba(255,255,255,.05);*/
